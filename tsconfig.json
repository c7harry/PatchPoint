{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "nodenext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  "types": ["jest", "react", "react-native"]
  },
  "include": [
  "types",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js"
  ],
  
}
